{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Complete build",
			"detail": "Create a PDDL, Plan it and Translate it",
			"group": "build",
			"type": "shell",
			"dependsOn": [
				"Create PDDL File",
				"Planner PDDL",
				"Run server",
			],
			"dependsOrder": "sequence",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "new",
				"showReuseMessage": true,
				"clear": true
			},
		},
		{
			"label": "Create Jar",
			"group": "build",
			"type": "shell",
			"command": "mvn",
			"args": [
				"clean",
				"package"
			],
			"presentation": {
				"echo": false,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": true
			}
		},
		{
			"label": "Create PDDL File",
			"detail": "Parse the JSON File into PDDL Problem File",
			"group": "build",
			"type": "shell",
			"command": "java",
			"args": [
				"-jar",
				"../planner/lib/sokobanParser.jar",
				"-i",
				"../sokoban/config/${input:JSON}.json",
				"-o",
				"${input:PDDL}"
			],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": true
			}
		},
		{
			"hide": true,
			"label": "Planner PDDL",
			"detail": "Use HSP to found the plan of the PDDL Probleme",
			"group": "none",
			"type": "shell",
			"command": "java",
			"args": [
				"-cp",
				"../planner/lib/pddl4j-4.0.0.jar",
				"fr.uga.pddl4j.planners.statespace.HSP",
				"../sokoban/pddl4S/domainSokoban.pddl",
				"../sokoban/pddl4S/out.pddl",
				"-e",
				"MAX",
				"-w",
				"1.2",
				">",
				"../sokoban/pddl4S/out.txt"
			]
		},
		{
			"label": "Translate txt output",
			"group": "build",
			"type": "shell",
			"command": "java",
			"args": [
				"-jar",
				"../planner/lib/sokobanParser.jar",
				"-t",
				"${input:TXT}"
			],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "shared",
				"showReuseMessage": false,
				"clear": true
			}
		},
		// RUN SERVER
		{
			"hide": true,
			"label": "Run server",
			"group": "none",
			"type": "shell",
			"command": "java",
			"args": [
				"--add-opens",
				"java.base/java.lang=ALL-UNNAMED",
				"-server",
				"-Xms2048m",
				"-Xmx2048m",
				"-cp",
				"\"$(mvn dependency:build-classpath -Dmdep.outputFile=/dev/stdout -q):target/test-classes/:target/classes\"",
				"sokoban.SokobanMain",
				"${input:JSON}.json"
			],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "shared",
				"showReuseMessage": false,
				"clear": true
			},
			"options": {
				"cwd": "../sokoban"
			}
		},
	],
	"inputs": [
		// Json File
		{
			"id": "JSON",
			"description": "The JSON Configuration file",
			"default": "test1",
			"type": "promptString",
		},
		// PDDL path
		{
			"id": "PDDL",
			"description": "The folder where to save the PDDL file",
			"default": "../sokoban/pddl4S",
			"type": "pickString",
			"options": [
				".",
				"../sokoban/pddl4S"
			]
		},
		// Text File
		{
			"id": "TXT",
			"description": "The TXT file of the output of a PDDL plan",
			"default": "../sokoban/pddl4S/out.txt",
			"type": "pickString",
			"options": [
				"./src/test/resources/translate/out.txt",
				"../sokoban/pddl4S/out.txt"
			]
		},
	]
}