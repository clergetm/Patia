{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Run server",
			"group": "none",
			"type": "shell",
			"command": "java",
			"args": [
				"--add-opens", "java.base/java.lang=ALL-UNNAMED",
				"-server", "-Xms2048m", "-Xmx2048m",
				"-cp" ,
				"\"$(mvn dependency:build-classpath -Dmdep.outputFile=/dev/stdout -q):target/test-classes/:target/classes\"",
      			"sokoban.SokobanMain"
			]
		},
		{
			"label": "Simple Planner",
			"group": "build",
			"type": "shell",
			"command": "java",
			"args": [
			"-cp", 
			"pddl4j-4.0.0.jar",										// pddl4j jar
			"fr.uga.pddl4j.planners.statespace.${input:planner}",	// Planner
			"pddl4S/domainSokoban.pddl",							// Domain
			"pddl4S/${input:problem}.pddl"							// Problem
			]
		},
		{
			"label": "Planner with args",
			"group": "build",
			"type": "shell",
			"command": "java",
			"args": [
			"-Xms${input:Xms}",										// Initial memory allocation
			"-Xmx${input:Xmx}",										// Maximum memory allocation
			"-cp", 													// classpath
			"pddl4j-4.0.0.jar",										// pddl4j jar
			"fr.uga.pddl4j.planners.statespace.${input:planner}",	// Planner
			"--timeout=${input:timeout}",							// Timeout
			"pddl4S/domainSokoban.pddl",							// Domain
			"pddl4S/${input:problem}.pddl"							// Problem
			]
		},
		{
			"label": "Planner with args saved",
			"group": "build",
			"type": "shell",
			"command": "java",
			"args": [
			"-Xms${input:Xms}",										// Initial memory allocation
			"-Xmx${input:Xms}",										// Maximum memory allocation
			"-cp", 													// classpath
			"pddl4j-4.0.0.jar",										// pddl4j jar
			"fr.uga.pddl4j.planners.statespace.${input:planner}",	// Planner
			"--timeout=600",										// Timeout
			"pddl4S/domainSokoban.pddl",							// Domain
			"pddl4S/${input:problem}.pddl",							// Problem
			]
		},
		{
			"label": "Planner with plan in out.txt",
			"group": "build",
			"type": "shell",
			"command": "java",
			"args": [
			"-Xms${input:Xms}",										// Initial memory allocation
			"-Xmx${input:Xms}",										// Maximum memory allocation
			"-cp", 													// classpath
			"pddl4j-4.0.0.jar",										// pddl4j jar
			"fr.uga.pddl4j.planners.statespace.${input:planner}",	// Planner
			"--timeout=600",										// Timeout
			"pddl4S/domainSokoban.pddl",							// Domain
			"pddl4S/${input:problem}.pddl",							// Problem
			">", "pddl4S/out.txt"									// Output File
			]
		},
	],
	"inputs": [
		{
			"id": "Xms",
            "description": "Initial memory allocation",
			"default": "512m",
			"type": "promptString"
		},
		{
			"id": "Xmx",
            "description": "Maximum memory allocation",
			"default": "512m",
			"type": "promptString"
		},
		{
            "id": "planner",
            "description": "planner name:",
            "default": "FF",
            "type": "pickString",
			"options": [
				"FF",
				"GSP",
				"HSP",
			]
        },
		{
			"id": "timeout",
			"description": "set the time out of the planner",
			"default": "600",
			"type": "promptString"
		},
		{
            "id": "problem",
            "description": "Problem file name:",
            "default": "p01",
            "type": "promptString"
        },

    ]
}